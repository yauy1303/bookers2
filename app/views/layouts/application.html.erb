<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/e9e6566511.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <%= link_to "Bookers", root_path, class:"navbar-brand" %>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to "Home", user_path(current_user), class:"nav-link text-light fa-solid fa-home" %>
                  </li>
                  <li>
                    <%= link_to "Users", users_path, class:"nav-link text-light fa-solid fa-users"  %>
                  </li>
                  <li>
                    <%= link_to "Books", books_path, class:"nav-link text-light fa-solid fa-book-open" %>
                  </li>
                  <li>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link text-light fa-solid fa-sign-out-alt" %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to "Home", root_path, class:"nav-link text-light fa-solid fa-home" %>
                  </li>
                  <li>
                    <%= link_to "About", home_about_path, class:"nav-link text-light fa-solid fa-link"  %>
                  </li>
                  <li>
                    <%= link_to "Sign up", new_user_registration_path, class:"nav-link text-light fa-solid fa-user-plus" %>
                  </li>
                  <li>
                    <%= link_to "Log in", new_user_session_path, class:"nav-link text-light fa-solid fa-sign-in-alt" %>
                  </li>
                <% end %>
              </ul>

            </div>

        </div>

      </nav>


    </header>

    <main>
       <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
