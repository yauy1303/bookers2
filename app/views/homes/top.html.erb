<div class="container">
  <div class="row">

    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h1>
        Welcome to
        <i class="fa-solid fa-book"></i>
        <strong>Bookers</strong>
        !!
        </h1>

        <p>
          In
          <i class="fa-solid fa-book"></i>
          <strong>Bookers</strong>
          ,
        </p>
        <p>you can share and exchange your opinion , inpressions , and emotions</p>
        <P>about various books!</P>


      <div class="btn-wrapper col-10 mx-auto">
          <% if user_signed_in? %>
          <div class="row">
            <%= link_to "Log in", user_path(current_user), class:"btn btn-info btn-sm btn-block mb-3 sign_in" %>
          </div>
          <div class="row">
            <%= link_to "Sign up", user_path(current_user), class:"btn btn-success btn-sm btn-block mb-3 sign_up" %>
          </div>
          <% else %>
          <div class="row">
            <%= link_to "Log in", new_user_session_path, class:"btn btn-info btn-sm btn-block mb-3 sign_in" %>
          </div>
          <div class="row">
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-success btn-sm btn-block mb-3 sign_up" %>
          </div>
          <% end %>
      </div>

    </div>
  </div>
</div>

