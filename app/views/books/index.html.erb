  <p id ="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User Info</h2>

      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr  class="border-top">
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr  class="border-top">
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class=row>
        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block edit_user_132836", method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(current_user), method: :get do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
              </td>
            <td>
              <%= link_to book_path(book.id), method: :get do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>

      </table>

    </div>
  </div>
</div>

