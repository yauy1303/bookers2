<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/list', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
               <%= link_to user_path(@user), method: :get do %>
                 <%= image_tag @user.get_profile_image(100,100) %><br>
                 <%= @user.name %>
               <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_find.id), method: :get do %>
                <%= @book_find.title %>
              <% end %>
            </td>
            <td>
              <%= @book_find.body %>
            </td>
            <td>
              <%= link_to 'Edit', edit_book_path(@book_find.id), class: "btn btn-success" %>
            </td>
            <td>
               <% if @book_find.user == current_user %>
                 <%= link_to 'Destroy', book_path(@book_find.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %>
               <% end %>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
